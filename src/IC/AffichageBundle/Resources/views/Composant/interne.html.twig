{% extends "ICAffichageBundle::layout.html.twig" %}
{% block title %}{{ parent() }} - Stock Interne{% endblock %}

{% block entete %}{{ parent() }} Stock Interne{% endblock %}
{% block stylesheets %}
	{% stylesheets filter='cssrewrite'
	'@ICAffichageBundle/Resources/public/css/interne.css' %}
		{{ parent() }}
		<link rel="stylesheet" href="{{ asset_url }}" type="text/css">
	{% endstylesheets %}
{% endblock %}
{% block body %}
	{{ parent()}}
	<table>
		<tr>
			<th class="titreFamille">Famille</th>
			<th class="titreSousFamille">Sous Famille</th>
			<th class="titreDesignation">Désignation</th>
			<th class="titreBoitier">Boitier</th>
			<th class="titreStockMinimum">Stock Minimum</th>
			<th class="titreStock">Stock</th>
			<th class="titreDetails">Détails</th>
		</tr>
		
		{% for composant in composants %}
			<tr class="{% if composant.stockMini > composant.stockInterne %}stockInsufisant {% endif %}ligneStock">
				<td>{{composant.idFamille}}</td>
				<td></td>
				<td>{{composant.nom}}</td>
				<td>{{composant.boitier}}</td>
				<td>{{composant.stockMini}}</td>
				<td>{{composant.stockInterne}}</td>
				<td></td>
			</tr>
		{% endfor %}
		</table>
{% endblock %}