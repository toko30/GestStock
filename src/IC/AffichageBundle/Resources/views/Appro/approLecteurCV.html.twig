{% extends "ICAffichageBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Approvisionnement Lecteur CV{% endblock %}

{% block entete %}{{ parent() }} Approvisionnement Lecteur CV{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{% stylesheets filter='cssrewrite'
	'@ICAffichageBundle/Resources/public/css/sous_traitant.css' %}
		<link rel="stylesheet" href="{{ asset_url }}" type="text/css">
	{% endstylesheets %}
{% endblock %}

{% block body %}
{{ parent() }}

<h1>Approvisionnement Lecteur CV</h1>
{% if appro is empty %}
		aucune commande en cours
	{% else %}
	
		{% set id = appro[0].appro.id %}
		
		<h2>Commande passée le {{appro[0].appro.dateCommande|date('d-m-Y')}}</h2>
		
		<table class="imp">
			<tr>
				<th>référence</th>
				<th>Designation</th>
				<th>quantite</th>
			</tr>
			{% for approvisionnement in appro %}
			
				{% if approvisionnement.appro.id != id %}
					{% set id = approvisionnement.appro.id %}
					</table>
					
					<h2>Commande passée le {{approvisionnement.appro.dateCommande|date('d-m-Y')}}</h2>
					
					<table class="imp">
						<tr>
							<th>Référence</th>
							<th>Designation</th>
							<th>quantite</th>
						</tr>				
					<tr>
						<td>{{approvisionnement.typeLecteur.referenceInterne}}</td>
						<td>{{approvisionnement.typeLecteur.designation}}</td>
						<td>{{approvisionnement.quantite}}</td>
					</tr>
				{%else %}
					<tr>
						<td>{{approvisionnement.typeLecteur.referenceInterne}}</td>
						<td>{{approvisionnement.typeLecteur.designation}}</td>
						<td>{{approvisionnement.quantite}}</td>
					</tr>
				{% endif %}
				
			{% endfor %}
		</table>
	{% endif %}
{% endblock %}
